<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Homework Test Suite" verbose="1" parallel = "methods" thread-count="4">
    <test name="Homework Test">
        <classes>
            <class name="Homework">
                <methods>
                    <include name="sum"/>
                    <include name="subtraction"/>
                    <include name="multiplication"/>
                    <include name="division"/>
                    <exclude name="modulo"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>